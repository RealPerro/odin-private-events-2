<p style="color: green"><%= notice %></p>

<h1>Awesome Events for: <%= current_user.email%></h1>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
    <h3>Attending:</h3>
    <% event.attended_users.each do |person| %>
      <p> <%= person.email %> </p>
    <% end %>
    <p>
      <%= link_to "Show this event", event %>
    </p>
  <% end %>
</div>

<%= link_to "New event", new_event_path %>
