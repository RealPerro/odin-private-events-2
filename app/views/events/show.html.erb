<p style="color: green"><%= notice %></p>

<%= render @event %>
<strong>Created by: </strong><%=@event.user.email%><br><br>
<strong>Attending: </strong>
<ul>
  <% @event.attended_users.uniq.each do |attendee| %>
    <li>
      <%= attendee.email %>
    </li>
  <% end %>
</ul>
<div>
  <%= link_to "Edit this event", edit_event_path(@event) %> |
  <%= link_to "Back to events", events_path %>

  <%= button_to "Destroy this event", @event, method: :delete %>
  <%= button_to "I want in!", add_attendee_event_path(@event), method: :put %>
</div>
